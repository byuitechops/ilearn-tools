{
  "manifest_version": 2,

  "name": "I-Learn Tools",
  "description": "This extension ads an upcoming assignments widget to the I-Learn homescreen, and a what-if calculator to the gradebook for students",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [{
    "js": ["whatIf.js"],
    "matches": ["https://byui.brightspace.com/d2l/lms/grades/my_grades/*",
               "https://pathway.brightspace.com/d2l/lms/grades/my_grades/*",
               "https://byui.brightspace.com/d2l/home*"]
  }],
  "web_accessible_resources": ["scripts.js", "window.html", "upcoming.html", "upcoming.js"],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab"
  ]
}
