{
  "manifest_version": 2,

  "name": "What if Calculator",
  "description": "This extension ads a what-if calculator to the Brightspace gradebook for students",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [{
    "js": ["whatIf.js"],
    "matches": ["https://byui.brightspace.com/d2l/lms/grades/my_grades/*",
               "https://pathway.brightspace.com/d2l/lms/grades/my_grades/*"]
  }],
  "web_accessible_resources": ["scripts.js", "window.html"],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab"
  ]
}
